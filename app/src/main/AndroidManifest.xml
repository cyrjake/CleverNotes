        </activity>
        <activity android:name="com.ser210.cyr.clevernotes2.Activities.AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ser210.cyr.clevernotes2.Activities.SettingsActivity" />
        </activity>
        <activity android:name="com.ser210.cyr.clevernotes2.Activities.Intro.WelcomeActivity" />
        <activity android:name="com.ser210.cyr.clevernotes2.Activities.ThemeActivity">
